<% if user_signed_in? %>
  <%= link_to "Create a Project", new_project_path %>
<% end %>

<% if @projects.count > 0 %>

  <% if @projects.count > 1 %>
    <h1> There are <%= @projects.count %> projects </h1>
  <% else %>
    <h1> There is <%= @projects.count %> project </h1>
  <% end %>

  <% @projects.each_slice(3) do |projects_slice| -%>
    <div class="row">
      <ul class="list-inline">
        <%= render :partial => projects_slice %>
      </ul>
    </div>
  <% end -%>

<% else %>
  <h3> There are no projects! </h3>
<% end %>
